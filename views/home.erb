<html>
    <head>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link type="text/css" rel="stylesheet" href="materialize.min.css"  media="screen,projection"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    </head>
    <body>
        <nav style="margin-bottom: 20px;;">
            <div class="grey darken-4" style="padding-bottom: 27px">
                <div class="navbar-wrapper container" style="text-align: center;">
                   <h3><lable>Gambling Site</lable></h3>
                </div>
            </div>
        </nav>
        <div class="ui-login center-align container" style="margin-top: 40px;">
            <div class="ui-login-left" style="margin-top: 20px;">
                <p>Place your bet on dice number(1 to 6)</p>
                <form action="/bet" method="post">
                    Bet Money: <input type="text" name="stake" placeholder="Money" required="required">
                    On: <input type="text" name="number" placeholder="Dice Number" required="required">
            </div>
            <div class="ui-login-right">
                <input type="submit" value="Bet" name="submit">
            </div>
                </form>
            <table>
                <tr>
                    <th>&nbsp;</th>
                    <th>
                Current Session
                    </th>
                    <th>
                Total
                    </th>
                </tr>
                <tr>
                    <th>Win:</th>
                    <td>
                        <%= session[:win] %> 
                    </td>
                    <td>
                        <%= session[:total_win]%> 
                    </td>
                </tr>
                <tr>
                    <th>Lost:</th>
                    <td>
                        <%= session[:lost] %> 
                    </td>
                    <td>
                        <%= session[:total_lost]%> 
                    </td>
                </tr>
                <tr>
                    <th>Profit</th>
                    <td>
                        <%= session[:win]-session[:lost]%>
                    </td>
                    <td>
                        <%= session[:total_win]-session[:total_lost]%> 
                    </td>
                </tr>
            </table>
            <div style="margin-top: 20px;">
                <a class="button" href="/logout">Logout</a>
            </div>    
            <div class="clearfix"></div>
        </div>
        <script type="text/javascript" src="materialize.min.js"></script>
    </body>
</html>
